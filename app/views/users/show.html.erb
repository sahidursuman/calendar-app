<% title("#{@user.first_name} #{@user.last_name}'s page") %>

<div class="row">
	<div class="col-sm-10 col-sm-offset-1">
		<div class="page-header">
			<h3>
				<%="#{@user.first_name} #{@user.last_name}" %> - Account Info
			</h3>
		</div>
		<p><%= "#{@user.first_name} is in #{@user.time_zone}." %></p>
	</div>
</div>
<br>
<dl class="dl-horizontal">
  <dt>first name:</dt>
  <dd><%= @user.first_name %></dd>
  <dt>last name: </dt>
  <dd><%= @user.last_name %></dd>
  <dt>email:</dt>
  <dd><%= @user.email %></dd>
  <dt>time zone:</dt>
  <dd><%= @user.time_zone %></dd>
  <dt>user id:</dt>
  <dd><%= @user.id %></dd>
  <dt>admin:</dt>
  <dd><%= @user.admin %></dd>
  <dt>created at:</dt>
  <dd><%= @user.created_at %></dd>
</dl>
<!-- <p id="notice"><%# notice %></p> -->

<div class="col-sm-10 col-sm-offset-1">
<h4>Current Bookings</h4>

<table class="table">
  <thead>
    <tr>
      <th>Start date</th>
      <th>Start time</th>
      <th>End date</th>
      <th>End time</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>

        <td><%= booking.start_time.in_time_zone(@user.time_zone).strftime("%b %e") %></td>
        <td><%= booking.start_time.in_time_zone(@user.time_zone).strftime(" %I:%M %p") %></td>
        <td><%= booking.end_time.in_time_zone(@user.time_zone).strftime("%b %e") %></td>
        <td><%= booking.end_time.in_time_zone(@user.time_zone).strftime("%I:%M %p") %></td>
        <td><%= link_to "#{booking.instructor.teacher.first_name.capitalize} #{booking.instructor.teacher.last_name.capitalize}", instructor_path(booking.instructor.id)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

