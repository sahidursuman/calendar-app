<li><%= link_to "Instructors", instructors_path %></li>
<!-- <li><%# link_to "Posts", posts_path %></li> -->
<% if !user_signed_in? %>
	<li><%= link_to "Sign in", new_user_session_path %></li>
	<li><%= link_to "Sign up", new_user_registration_path %></li>
<% else %>
<!-- <li><%# link_to "??? Page", inside_path %></li> -->
	<% if current_user.admin? %>
		<li><%= link_to "Admin", admin_root_path %></li>
	<% end %>

	<li class="dropdown">
	  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%="Signed in as: #{current_user.first_name.capitalize}"%><span class="caret"></span></a>
	  <ul class="dropdown-menu" role="menu">
	  	<li><%= link_to "Profile", user_path(current_user.id) %></li>
			<li><%= link_to "Edit your account", edit_user_registration_path %></li>
			<% if current_user.instructor %>
				<li class="divider"></li>
				<li class="dropdown-header">Teacher links</li>
				<li><%= link_to "Manage Availability", new_instructor_availability_path(current_user.instructor.id) %></li>
				<li><%= link_to "Your Classes", instructor_bookings_path(current_user.instructor.id) %></li>
				<li><%= link_to "Instructor Profile", instructor_path(current_user.instructor.id) %></li>
				<li><%= link_to "Edit Instructor Info", edit_instructor_path(current_user.instructor.id) %></li>
			<% end %>
			<li class="divider"></li>
			<li><%= link_to "Sign out", destroy_user_session_path, data:{method: :delete} %></li>
		</ul>
	</li>
	
	
	<% if !current_user.instructor %>
		<li><%= link_to "Become an Instructor", new_instructor_path %></li>
	<% end %>
<% end %>
