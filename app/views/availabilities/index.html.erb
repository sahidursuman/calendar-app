<p id="notice"><%= notice %></p>

<h1>Listing Availabilities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= availability.start_time %></td>
        <td><%= availability.end_time %></td>
        <td><%= availability.user.first_name %></td>
        <td><%= link_to 'Show', user_availability_path(@user, availability) %></td>
        <td><%= link_to 'Edit', edit_user_availability_path(@user, availability) %></td>
        <td><%= link_to 'Destroy', user_availability_path(@user, availability), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul>
<li><%= link_to 'New Availability', new_user_availability_path %></li>	
<li><%= link_to 'Back to User Page', user_path(@user) %></li>
</ul>


