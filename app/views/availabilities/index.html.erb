<p id="notice"><%= notice %></p>

<h1>Listing Availabilities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= availability.start_time %></td>
        <td><%= availability.end_time %></td>
        <td><%= availability.instructor.teacher.first_name %></td>
        <td><%= link_to 'Show', instructor_availability_path(@instructor, availability) %></td>
        <td><%= link_to 'Edit', edit_instructor_availability_path(@instructor, availability) %></td>
        <td><%= link_to 'Destroy', instructor_availability_path(@instructor, availability), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<ul>
<li><%= link_to 'New Availability', new_instructor_availability_path %></li>	
<li><%= link_to 'Back to instructor Page', instructor_path(@instructor) %></li>
</ul>


